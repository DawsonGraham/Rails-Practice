<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  
  <ul>
    <li class="nav-bar"><%= link_to "Home", root_path %></li>
    <% if user_signed_in? %>
     <li class="nav-bar"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li class="nav-bar"><%= link_to "Login", new_user_session_path %></li>
      <li class="nav-bar"><%= link_to "Signup", new_user_registration_path %></li>
    <% end %>
    </ul>
  
    <%= yield %>

  </body>
</html>
